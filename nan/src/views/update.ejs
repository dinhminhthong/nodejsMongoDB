<body>
  <div class="row">
    <div class="col-3"> </div>
    <div class="col-6">
      <form action="/update-now" method="post">

        <input name="id" class="form-control" value="<%=dataUser[0].id%>" hidden>

        <div>
          <label>Name: </label>
          <input name="name" class="form-control" value="<%=dataUser[0].name%>">
        </div>
        <div>
          <label>Author: </label>
          <input name="author" class="form-control" value="<%=dataUser[0].author%>">
        </div>
        <div>
          <label>Type: </label>
          <input name="type" class="form-control" value="<%=dataUser[0].type%>">
        </div>
        <div class="d-flex justify-content-end">
          <button  style="margin-top: 10px" class="btn btn-outline-success" type="submit">Save</button>
        </div>


      </form>
    </div>


  </div>

</body>

</html>